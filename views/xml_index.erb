<?xml version="1.0"?>
<simpsons type="array">
<% @family.each_with_index do |person,index| %>
  <simpson>
    <id type="integer"><%= person.id %></id>
    <name><%= person.name %></name>
    <uri><%= entity_uri(person.id) %></uri>
    <dad_uri><%= entity_uri(person.dad_id) %></dad_uri>
    <mom_uri><%= entity_uri(person.mom_id) %></mom_uri>
  </simpson>
<% end %>
</simpsons>
